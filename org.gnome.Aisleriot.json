{
    "app-id": "org.gnome.Aisleriot",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "sol",
    "rename-appdata-file": "sol.metainfo.xml",
    "rename-desktop-file": "sol.desktop",
    "rename-icon": "gnome-aisleriot",
    "copy-icon": true,
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "guile",
            "cleanup": [
                "/bin",
                "/lib/libguile-3.0.so.1.2.0-gdb.scm"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/guile/guile-3.0.9.tar.xz",
                    "sha256": "1a2625ac72b2366e95792f3fe758fd2df775b4044a90a4a9787326e66c0d750d"
                }
            ],
            "modules":[
                {
                    "name": "gc",
                    "cleanup": [
                        "/share"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://www.hboehm.info/gc/gc_source/gc-8.2.4.tar.gz",
                            "sha256": "3d0d3cdbe077403d3106bb40f0cbb563413d6efdbb2a7e1cd6886595dec48fc2"
                        }
                    ],
                    "modules": [
                        {
                            "name": "libatomic_ops",
                            "sources": [
                                {
                                    "type": "archive",
                                    "url": "https://github.com/ivmai/libatomic_ops/releases/download/v7.6.16/libatomic_ops-7.6.16.tar.gz",
                                    "sha256": "b06969a04b2f7f3f3034ff1ee90f11a8f90b5e321fc7091995eb7c24495278aa"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "shared-modules/libcanberra/libcanberra.json",
        {
            "name": "aisleriot",
            "buildsystem": "meson",
            "config-opts": [
                "-Dtheme_kde=false",
                "-Dgconf=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/aisleriot.git",
                    "tag": "3.22.33",
                    "commit": "92df82480fb7f329256847199451473099eb07d4"
                },
                {
                    "type": "patch",
                    "paths": [
                        "appdata.patch",
                        "aisleriot-meson.patch"
                    ]
                }
            ]
        }
    ]
}
