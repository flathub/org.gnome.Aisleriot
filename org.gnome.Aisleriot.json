{
    "app-id": "org.gnome.Aisleriot",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "sol",
    "rename-appdata-file": "sol.appdata.xml",
    "rename-desktop-file": "sol.desktop",
    "rename-icon": "gnome-aisleriot",
    "copy-icon": true,
    "finish-args": [
        "--share=ipc", "--socket=x11",
        "--socket=wayland",
        "--device=dri", "--socket=pulseaudio",
        "--talk-name=org.gnome.GConf"
    ],
    "cleanup": [
        "/include", "/lib/pkgconfig",
        "/share/pkgconfig", "/share/aclocal",
        "/man", "/share/man", "/share/gtk-doc",
        "*.la", "*.a"
    ],
    "modules": [
        {
            "name": "guile",
            "cleanup": ["/bin",
                        "/lib/libguile-2.2.so.1.3.0-gdb.scm"
            ],            
            "sources": [
              {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/guile/guile-2.2.3.tar.xz",
                    "sha256": "8353a8849cd7aa77be66af04bd6bf7a6207440d2f8722e46672232bb9f0a4086"
              }
            ],
            "modules":[{
                    "name": "gc",
                    "cleanup": [
                      "/share"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "http://www.hboehm.info/gc/gc_source/gc-7.6.0.tar.gz",
                            "sha256": "a14a28b1129be90e55cd6f71127ffc5594e1091d5d54131528c24cd0c03b7d90"
                        }
                    ],
                    "modules": [
                        {
                            "name": "libatomic_ops",
                            "sources": [{
                                "type": "archive",
                                "url": "https://github.com/ivmai/libatomic_ops/archive/v7.6.10.tar.gz",
                                "sha256": "e6b0909cf4e63cec693fe6c48191ce864c32c5113e16c3f517aa2a244b46992f"
                            }]
                        }
                    ]
            }]
        },
        {
            "name": "gconf",
            "cleanup": ["/bin", "/share/aclocal"],
            "config-opts": [ "--disable-static", 
                            "--disable-gtk-doc", 
                            "--disable-orbit",
                            "--disable-introspection" 
                        ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/GConf/3.2/GConf-3.2.6.tar.xz",
                    "sha256": "1912b91803ab09a5eed34d364bf09fe3a2a9c96751fde03a4e0cfa51a04d784c"
                }
            ],
            "modules": [
                "shared-modules/dbus-glib/dbus-glib-0.110.json",
                "shared-modules/intltool/intltool-0.51.json"
            ]
        },
        {
            "name": "aisleriot",
            "config-opts": [
                "--with-card-theme-formats=svg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/aisleriot/3.22/aisleriot-3.22.9.tar.xz",
                    "sha256": "51f2ffe4dd4f23349b033fd87aab7bf433641285719503dd7e52b2c25982ed7b"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                }
            ]
        }
    ]
}